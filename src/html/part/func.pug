mixin filter(page)
  form.form
    .m-filter
      .head
        .left
          label.m-cb
            input(type="checkbox", class="selallcb")
            .img
            .cont 全选
          if page == '大屏管理-情报展示'
            .btn 时间升序
            .btn.selallbtn 批量选中
            .btn= '批量' + (sstitle == "展示" ? "取消展示" : "展示" )
          else if page == '情报管理-情报查看'
            .btn 时间降序
            .btn 情报导出
            .btn 批量收藏
            .btn 批量删除
            .btn.yp 批量研判
              ul
                li 法规
                li 标准
                li 技术
                li 威胁
                li 新闻事件
          else if page == '情报审批-情报库' || '情报库-情报库'
            .btn 时间降序
            .btn 情报导出
            .btn 批量删除
            .btn 批量提交         
        .right
          if page == '情报管理-情报查看'
            .btn 导入
          .btn 刷新
          .m-dropdown
            select.selt
              option 每页显示10
              option 每页显示50
              option 每页显示100
      .body
        .label 情报时间
        input.datetime(type="text",name="stime")
        .split
        input.datetime(type="text",name="etime")
        button(type="button").btn 确定
        if page=='情报管理-情报查看'
          .btns
            .btn.list.active 列表
            .btn.cont 摘要

