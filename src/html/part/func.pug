mixin pagenum()
  .m-pagenums
    .btn 上一页
    - var i = 0
    while i++< 10
      .item(class={active: i == 1})= i
    .btn 下一页
    .sum 共10页,
    .sumt 共计 
      span 100
    .sumt.t 条
mixin upagnum()
  .u-pagenums
    .btn 《上一页
    - var i=0
    while i++<5
      .item(class={active: i == 1})=i
    .btn 下一页》
    .cur 当前
      input(type="text")
      span /
      span 10条,
      span 共
      span 105条
