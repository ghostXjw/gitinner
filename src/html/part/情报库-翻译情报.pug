extends basic.pug

append vars
  - var title = "情报库"

append style
  link(rel="stylesheet", href="style/情报库.css")

block content
  .m-subcont
    .dir 当前位置：#{title} > #{subtitle}
    .start
      .collect
        i
        span 收藏情报
      h1 原始情报
      ul
        li
          label.title 标题:
          span.body Peixian to celebrate the38 International Womens festival awards
        li 
          label.title 情报来源:
          span.body BBC Chinese Web
          label.title.s-title 类型:
          span.body statute
          label.title.s-title 国别:
          span.body China
        li
          label.title 监测时间:
          span.body 2017-03-07 14:37:00
        li
          label.title 原文链接:
          span.body http://www.xici.net/d238177928.htm
          .c-url 复制链接
          .c-url.c-text 复制文本
        li
          .desc County leaders Zhang Lei, Liu Huadong, Xu Longbin, Wang Suzhen, county women's FederationPresident Susasa, education secretary He Lei, county propaganda department vice minister Hu Hongxia, vice chairman of the Federation of Zhang Suhua and the community on behalf of women,by the recognition of the group and individual volunteers....
      .line
    .start
      h1 翻译情报
      ul
        li
          label.title 标题:
          span.body 沛县庆祝‘三八’国际劳动节表彰大会举行
        li 
          label.title 情报来源:
          span.body BBC 中文网站
          label.title.s-title 类型:
          span.body 法规
          label.title.s-title 国别:
          span.body 中国
        li
          label.title 监测时间:
          span.body 2017-03-07 14:37:00
        li
          label.title 原文链接:
          span.body http://www.xici.net/d238177928.htm
          .c-url 复制链接
          .c-url.c-text 复制文本
        li
          .desc 沛县庆祝“三八”国际劳动妇女节暨表彰大会于三月七日在县职教中心礼堂举行。县领导张磊、刘华东、徐龙彬、王素真，县妇联主席苏莎莎、教育局局长贺磊、县委宣传部常务副部长胡红侠、妇联副主席张素华及社会各界的妇女代表、受表彰的团体和个人、爱心志愿者600多人出席了会议
      .line
    .info-edit
      ul
        li 
          span.e-title 情报标题
          input.l-input(placeholder='国家海洋预报台’苗柏‘最大可能登陆点是香港')
        li
          span.e-title 情报来源
          input.s-input(placeholder='BBC中文网')
          span.e-title.s-title 类型
          input.s-input(placeholder='法规')
          span.e-title.t-title 国别
          input.s-input(placeholder='中国')
        li
          span.e-title 监测时间
          input.datetime(type="text")
        li
          span.e-title 原文链接
          input.m-input(placeholder='国家海洋预报台’苗柏‘最大可能登陆点是香港')
          .c-url 复制链接
        li
          span.e-title 情报内容
          textarea
        li
          span.e-title 备注
          textarea.e-remarks(placeholder='请填写备注信息')
      .operate
        div.rest 重置
        div.success 确定